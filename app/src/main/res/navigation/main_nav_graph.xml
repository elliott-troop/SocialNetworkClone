<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.elliottco.socialnetworkclone.ui.main.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.elliottco.socialnetworkclone.ui.main.fragments.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.elliottco.socialnetworkclone.ui.main.fragments.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.elliottco.socialnetworkclone.ui.main.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.elliottco.socialnetworkclone.ui.main.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/othersProfileFragment"
        android:name="com.elliottco.socialnetworkclone.ui.main.fragments.OthersProfileFragment"
        android:label="OthersProfileFragment" >
        <argument
            android:name="uid"
            app:argType="string" />
    </fragment>

    <action android:id="@+id/globalActionToOthersProfileFragment"
        app:destination="@id/othersProfileFragment" />
    <action android:id="@+id/globalActionToCreatePostFragment"
        app:destination="@id/createPostFragment" />
</navigation>